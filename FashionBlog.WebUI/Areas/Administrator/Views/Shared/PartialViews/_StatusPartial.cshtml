@model Status

@switch (Model)
{
    case Status.None:
        <span class="badge badge-primary">Transaction Unsuccessful</span>
        break;
    case Status.Active:
        <span class="badge badge-secondary">Active</span>
        break;
    case Status.Deleted:
        <span class="badge badge-danger">Deleted</span>
        break;
    case Status.Updated:
        <span class="badge badge-info">Updated</span>
        break;
}